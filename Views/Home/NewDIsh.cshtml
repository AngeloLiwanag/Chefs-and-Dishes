@model Dish
<form class="row" asp-action="createDish" asp-controller="Home" method="POST">
    <div class="text-left mt-3 col d-inline">
        <div class="form-group">
        <fieldset>
            <span asp-validation-for="Name" class="text-danger"></span>
            <label class="control-label" asp-for="Name">Name of Dish</label>
            <input class="form-control" asp-for="Name" type="text">
        </fieldset>
        </div>
        <div class="form-group">
        <fieldset>
            <span asp-validation-for="Calories" class="text-danger"></span>
            <label class="control-label" asp-for="Calories">Number of Calories</label>
            <input class="form-control" asp-for="Calories" type="text">
        </fieldset>
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            <span asp-validation-for="Tastiness" class="text-danger"></span>
            <label asp-for="Tastiness">Tastiness</label>
            <select asp-for="Tastiness" class="form-control">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>  
    </div>
    <div class="col">
        <div class="form-group">
            <span asp-validation-for="ChefId" class="text-danger"></span>
            <label asp-for="ChefId">Chefs</label>
            <select asp-for="ChefId" class="form-control">
                @foreach(var chef in ViewBag.Chefs)
                {
                    <option value="@chef.ChefId">@chef.First_Name</option>
                }
            </select>
        </div>  
    </div>
    <div class="col">
        <div class="form-group">
            <span asp-validation-for="Description" class="text-danger"></span>
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>
        <button class="btn btn-primary btn-sm float-right" type="submit">Add Dish</button>
    </div>
</form> 